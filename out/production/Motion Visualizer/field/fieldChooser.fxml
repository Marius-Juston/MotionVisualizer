<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
  minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0"
  xmlns="http://javafx.com/javafx/8.0.121" fx:controller="field.FieldChooser">
  <children>
    <HBox VBox.vgrow="ALWAYS" alignment="CENTER">
      <children>
        <ScrollPane HBox.hgrow="ALWAYS" prefHeight="200.0" prefWidth="200.0" fx:id="scrollPane">

        </ScrollPane>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="182.0">
          <children>
            <Button mnemonicParsing="false" onAction="#showImage" text="Select image"/>
            <Button mnemonicParsing="false" onAction="#rotateImage" prefHeight="39.0"
              prefWidth="129.0" text="Rotate 90"/>
            <Button mnemonicParsing="false" onAction="#selectAndCropImage" text="Select and Crop"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" fx:id="selectionText"/>
            <HBox>
              <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Image scale"/>
                <TextField onAction="#changeImageScale" text="100"/>
              </children>
            </HBox>
            <Text layoutX="101.0" layoutY="254.0" strokeType="OUTSIDE" strokeWidth="0.0"
              wrappingWidth="1.0" fx:id="selectionText2"/>
            <HBox prefHeight="39.0" prefWidth="182.0">
              <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Set scale"/>
                <TextField alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity"
                  onAction="#setScale" prefHeight="25.0" prefWidth="69.0" promptText="distance"/>
              </children>
            </HBox>
            <Text layoutX="101.0" layoutY="262.0" strokeType="OUTSIDE" strokeWidth="0.0"
              wrappingWidth="53.0" fx:id="selectionText1"/>
          </children>
        </VBox>
      </children>
    </HBox>
    <Button alignment="CENTER" mnemonicParsing="false" onAction="#finish" text="Ok"/>
  </children>
</VBox>
